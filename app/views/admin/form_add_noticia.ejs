<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.html">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
		
			<div class="row">
				<% if (typeof validacao !== 'undefined') { %>
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<% validacao.forEach(function(val) { %>
									<li><%= val.msg %></li>
								<% }) %>
							</ul>
						</div>
					</div>
				<% } %>
			</div>
	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="../nova-noticia/salvar" method="post">
						<div class="form-group">
							<label>Título</label>
							<input type="text" class="form-control" id="ds_titulo" name="ds_titulo" placeholder="Título da Notícia" value="<%= (typeof noticia !== 'undefined') ? noticia.ds_titulo : '' %>">
						</div>
			
						<br><br>
			
						<div class="form-group">
							<label>Resumo</label>
							<input type="text" class="form-control" id="ds_resumo" name="ds_resumo" placeholder="Resumo da Notícia" value="<%=  (typeof noticia !== 'undefined') ? noticia.ds_resumo : '' %>">
						</div>
			
						<br><br>
			
						<div class="form-group">
							<label>Autor</label>
							<input type="text" class="form-control" id="ds_autor" name="ds_autor" placeholder="Autor da Notícia" value="<%=  (typeof noticia !== 'undefined') ? noticia.ds_autor : '' %>">
						</div>
			
						<br><br>
			
						<div class="form-group">
							<label>Data dos fatos</label>
							<input type="date" class="form-control" id="dt_acontecimento_noticia" name="dt_acontecimento_noticia" placeholder="Data do Fato" value="<%=  (typeof noticia !== 'undefined') ? noticia.dt_acontecimento_noticia : '' %>">
						</div>
			
						<br><br>
			
						<div class="form-group">
							<label>Notícia</label>
							<textarea name="ds_noticia" class="form-control" id="ds_noticia" cols="30" rows="5"><%=  (typeof noticia !== 'undefined') ? noticia.ds_noticia : '' %></textarea>
						</div>
			
						<br><br>
			
						<input type="submit" class="btn btn-default" value="Salvar">
					</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>